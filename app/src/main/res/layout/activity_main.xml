<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.minervaheavyindustries.sunrisealarm.MainActivity">

    <TextView
        android:text="Set the Alarm!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_status"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="96dp" />

    <Button
        android:text="Unset Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/unset_alarm"
        android:layout_above="@+id/alarm_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:text="Set Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_alarm"
        android:layout_above="@+id/unset_alarm"
        android:layout_alignRight="@+id/unset_alarm"
        android:layout_alignEnd="@+id/unset_alarm" />

    <TextView
        android:text="Ringtone: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alarm_status"
        android:layout_alignLeft="@+id/alarm_status"
        android:layout_alignStart="@+id/alarm_status"
        android:layout_marginTop="45dp"
        android:id="@+id/ringtone_setting" />

    <Button
        android:text="Set Ringtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set_alarm"
        android:layout_alignRight="@+id/set_alarm"
        android:layout_alignEnd="@+id/set_alarm"
        android:layout_marginBottom="16dp"
        android:id="@+id/set_alarm_sound" />

</RelativeLayout>
